@model VirtualAgenda.Server.Models.Entities.AgendaCrud

<h1> Edit Informations </h1>

@if (Model is null)
{
	<p>No information found with this id!</p>
}
else
{
	<form method="post">
		<div class="mt-3">
			<label class="mt-3">Id</label>
			<input type="text" class="form-control" asp-for="Id" readonly />
		</div>

		<div class="mt-3">
			<label class="mt-3">Name</label>
			<input type="text" class="form-control" asp-for="Name" />
		</div>

		<div class="mt-3">
			<label class="mt-3">Email</label>
			<input type="email" class="form-control" asp-for="Email" />
		</div>

		<div class="mt-3">
			<label class="mt-3">Phone Number</label>
			<input type="text" class="form-control" asp-for="PhoneNumber" />
		</div>

		<div class="mt-3">
			<button type="submit" class="btn btn-primary">Save</button>
		</div>

		<div class="mt-3">
			<button type="submit" class="btn btn-danger"
					asp-action="Delete"
					asp-controller="Agenda">
				Delete
			</button>
		</div>
	</form>
}

<script>
	export default {
		name: 'EditPage'
	}
</script>